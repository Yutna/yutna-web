{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/components": ["components"],
      "@/components/*": ["components/*"],
      "@/config": ["config"],
      "@/config/*": ["config/*"],
      "@/constants": ["constants"],
      "@/constants/*": ["constants/*"],
      "@/hooks": ["hooks"],
      "@/hooks/*": ["hooks/*"],
      "@/layouts": ["layouts"],
      "@/layouts/*": ["layouts/*"],
      "@/lib": ["lib"],
      "@/lib/*": ["lib/*"],
      "@/locales": ["locales"],
      "@/locales/*": ["locales/*"],
      "@/pages": ["pages"],
      "@/pages/*": ["pages/*"],
      "@/posts": ["posts"],
      "@/posts/*": ["posts/*"],
      "@/screens": ["screens"],
      "@/screens/*": ["screens/*"],
      "@/styles": ["styles"],
      "@/styles/*": ["styles/*"],
      "@/types": ["types"],
      "@/types/*": ["types/*"],
      "@/utils": ["utils"],
      "@/utils/*": ["utils/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
